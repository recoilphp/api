{
    "name": "recoil/api",
    "description": "The public Recoil API, for library and application developers.",
    "require": {
        "php": ">=7.3"
    },
    "require-dev": {
        "eloquent/phony": "^5",
        "eloquent/phony-phpunit": "^7",
        "friendsofphp/php-cs-fixer": "^2",
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": { "Recoil\\": "src" }
    },
    "autoload-dev": { "psr-4" : { "Recoil\\": "test/src" }},
    "keywords": [
        "coroutine",
        "generator",
        "event",
        "async",
        "asynchronous",
        "react",
        "green",
        "thread",
        "multitasking",
        "continuation"
    ],
    "homepage": "https://github.com/recoilphp/api",
    "license": "MIT",
    "authors": [
        {
            "name": "James Harris",
            "email": "mailjamesharris@gmail.com",
            "homepage": "https://github.com/jmalloc"
        }
    ],
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.3"
        }
    }
}
